// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "pytorch/pytorch:latest",

	"runArgs": ["--gpus=all"],
	


	// "build": { 
	// 	"context": "..",
	// 	"dockerfile": "Dockerfile"
	// },


	// "features": {
	// 	"ghcr.io/devcontainers-extra/features/rclone:1": {}
	// },



	// "mounts": ["source=${localWorkspaceFolder}/../data,target=/mnt/xxx,type=bind"],

	// "mounts": ["source=${localWorkspaceFolder}/../data,target=/mnt/xxx,type=bind"],
	



	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],



	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "apt-get update && apt-get install -y git python3-pyqt5 libqt5widgets5 x11-apps && pip3 install --user -r requirements.txt",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter",
				"github.copilot"
			]
		},
		"settings": {
			"terminal.integrated.defaultProfile.linux": "bash",
			"python.defaultInterpreterPath": "/opt/conda/bin/python",
            "python.condaPath": "/opt/conda/bin/conda",
            "python.condaActivateEnvironment": "base"
		}
	
	}

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
